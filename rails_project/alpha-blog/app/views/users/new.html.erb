<h1 align="center">Signup for Alpha Blog</h1>
<div class="container">
    <%= render 'shared/error', obj: @user %>
</div>
<br>
<div class="container">
    <div class='row'>
        <div class='col-sm-12'>
            <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                <div class="form-group row">
                    <div class="col-sm-1 col-form-label offset-sm-1">
                        
                        <%= f.label :username %>
                    </div>
                    
                    <div class="col-sm-9">
                    <%= f.text_field :username, class: "form-control", placeholder: "Enter User Name", autofocus:true %>
                    </div>
                </div>
            
                <div class="form-group row">
                    <div class="col-sm-1 col-form-label offset-sm-1">    
                        <%= f.label :email %>
                    </div>
                    <div class="col-sm-9">
                        <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus:true %>
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-sm-1 col-form-label offset-sm-1">    
                        <%= f.label :password %>
                    </div>
                    <div class="col-sm-9">
                        <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", autofocus:true %>
                    </div>
                </div>
            
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-8">
                       <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %> 
                    </div>
                </div>
            
           
            <% end %>
            <div class="col-sm-4 offset-sm-4">
                [<%= link_to "Cancel request and return to article listing", articles_path %>]
            </div>
        </div>
    </div>
</div>