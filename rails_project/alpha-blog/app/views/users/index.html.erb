<h1 align="center">All Alpha Bloggers</h1>
    <div align="center">
        <div class="col-sm-2 bg-light">
            <%= will_paginate %>
        </div>
    <% @users.each do |user| %>
        <ul class="listing">
            <div class="row">
                <div class="col-sm-4 offset-sm-4 card card-body bg-light">
                    <li><%= link_to gravatar_for(user), user_path(user) %></li>
                    <li class="article-title"><%= link_to user.username, user_path(user) %> </li>
                    <li><small><%= pluralize(user.articles.count, "article") if user.articles%></small></li>
                    <% if logged_in? and current_user.admin? %>
                        <li>
                            <%= link_to "Delete this user", user_path(user), method: :delete,
                            data: { confirm: "Are you sure you want to delete the user and all their articles?" } %>
                        </li>
                    <% end%>
                </div>
            </div>
        </ul>
    <% end %>
    </div>
<div class="col-sm-2 offset-sm-5 bg-light">
    <%= will_paginate %>
</div>