<div class="container">
    <%= render 'layouts/error' %>
</div>
<br>
<div class="container">
    <div class='row'>
        <div class='col-sm-12'>
            <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                <div class="form-group row">
                    <div class="col-sm-1 col-form-label offset-sm-1">
                        
                        <%= f.label :title %>
                    </div>
                    
                    <div class="col-sm-9">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus:true %>
                    </div>
                </div>
            
                <div class="form-group row">
                    <div class="col-sm-1 col-form-label offset-sm-1">    
                        <%= f.label :description %>
                    </div>
                    <div class="col-sm-9">
                        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article", autofocus:true %>
                    </div>
                </div>
            
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-8">
                       <%= f.submit class: 'btn btn-primary btn-lg' %> 
                    </div>
                </div>
            
           
            <% end %>
            <div class="col-sm-4 offset-sm-4">
                [<%= link_to "Cancel request and return to article listing", articles_path %>]
            </div>
        </div>
    </div>
</div>